#!/bin/sh
# postinst script for cscrew-base
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        # bin related
		chmod 755 /usr/bin/cscrew-chmownd
		chown root:root /usr/bin/cscrew-chmownd
		cscrew-chmownd "root:root" 755 /usr/bin/cscrew-diversion-add
		cscrew-chmownd "root:root" 755 /usr/bin/cscrew-diversion-remove
        
        # profile.d
        cscrew-chmownd "root:root" 644 /etc/profile.d/cscrew-base.sh

        # bash.bashrc related
        ln -s /etc/bash.bashrc.cscrew-base /etc/bash.bashrc
        cscrew-chmownd "root:root" 644 /etc/bash.bashrc.cscrew-base
        cscrew-chmownd "root:root" 644 /etc/bash.bashrc
        install -d -o root -g root -m 755 /etc/bash.bashrc.d
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
